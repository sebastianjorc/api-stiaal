{
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "target": "es2016",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "forceConsistentCasingInFileNames": true,         
      "sourceMap": true,
      "outDir": "dist",
      "strict": true,
      "baseUrl": ".",
      "skipLibCheck": true,
      "paths": {
          "*": ["node_modules/*", "src/types/*"]
      }
  },
  "include": ["./src/**/*"]
}